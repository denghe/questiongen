<controls:FloatableWindow x:Class="QuestionGen.Windows.Creator_题_选择"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=FloatableWindow"
           Width="884" Height="558" 
           Title="创建一道题 第二步">
    <controls:FloatableWindow.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SimSun" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="16" />
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="FontFamily" Value="SimSun" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="16" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="SimSun" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="23" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="FontFamily" Value="SimSun" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="23" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="SimSun" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="23" />
            <Setter Property="Width" Value="75" />
        </Style>
    </controls:FloatableWindow.Resources>
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="CancelButton" Content="取消" Click="CancelButton_Click" HorizontalAlignment="Right" Margin="0,3,13,3" Grid.Row="1" Grid.Column="2" />
        <Button x:Name="OKButton" Content="提交" Click="OKButton_Click" HorizontalAlignment="Right" Margin="0,3,94,3" Grid.Row="1"  Grid.Column="2" />


        <TextBlock HorizontalAlignment="Right" Margin="0,12,0,0" Text="显示模板:" VerticalAlignment="Top" />
        <TextBox AcceptsReturn="True" Margin="0,12,13,0" Name="textBox2" VerticalScrollBarVisibility="Visible" Grid.Column="1" Height="154" VerticalAlignment="Top" />


        <TextBlock HorizontalAlignment="Right" Margin="0,180,0,0" Text="选项:" VerticalAlignment="Top" />
        <ScrollViewer Name="scrollViewer1" Grid.Column="1" Margin="0,173,12,0" Height="229" VerticalAlignment="Top">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="20" Width="32" Height="20" Text="1"/>
                    <TextBox AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Width="640" Height="50" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="20" Width="32" Height="20" Text="2"/>
                    <TextBox AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Width="640" Height="50" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="20" Width="32" Height="20" Text="3"/>
                    <TextBox AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Width="640" Height="50" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="20" Width="32" Height="20" Text="4"/>
                    <TextBox AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Width="640" Height="50" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <Button Content="增加选项" HorizontalAlignment="Right" Margin="0,379,0,0" Name="button1" Height="23" VerticalAlignment="Top" />

        <TextBlock HorizontalAlignment="Right" Margin="0,418,0,0" Text="答案:" VerticalAlignment="Top" />
        <ScrollViewer Margin="0,408,13,0" Grid.Column="1">
        </ScrollViewer>        
        
        
    </Grid>
</controls:FloatableWindow>