<controls:FloatableWindow x:Class="QuestionGen.Windows.试题导出器"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=FloatableWindow"
           Width="588" Height="498" 
           Title="试题导出器（自己粘贴复制）" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk">
    <controls:FloatableWindow.Resources>
        <Style TargetType="RichTextBox">
            <Setter Property="FontFamily" Value="Arial, SimSun" />
            <Setter Property="FontSize" Value="16" />
        </Style>
    </controls:FloatableWindow.Resources>
    <Grid x:Name="LayoutRoot">
        <RichTextBox x:Name="_代码_RichTextBox" />
    </Grid>
</controls:FloatableWindow>